<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kobook.mappers.visitMapper">

	<select id="visitCount" resultType="int">
		select sum(count) from visit
	</select>

	<select id="paySum" resultType="Integer">
		select sum(pay_amount) from pay
		where pay_date like #{pay_date}
	</select>


	<select id="payDaySum" resultType="Integer">
		select sum(pay_amount) from	pay
		where pay_date like #{pay_date} 
		order by pay_date desc
	</select>
	
	<delete id="blackNotiRemove" parameterType="Integer">
		delete from black where black_id = #{blakc_id}
	</delete>

	
</mapper>











